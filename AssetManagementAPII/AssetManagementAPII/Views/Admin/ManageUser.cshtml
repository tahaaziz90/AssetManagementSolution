
@{
    ViewBag.Title = "User Page";
    Layout = "~/Views/Shared/standard.cshtml";
}
<section class="content-header">
    <h1 class="text-center">
        User Management
    </h1>
</section>

<section>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <button type="button" class="btn btn-primary pull-right" style="margin:10px" data-toggle="modal" data-target="#exampleModal">
                Add User
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <table class="table table-bordered" id="userTable">
                <thead class="thead-dark">
                    <tr>
                        <th>UserID</th>
                        <th>User Name</th>
                        <th>Password</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Pin</th>
                        <th>Designation</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>
        </div>
    </div>
</section>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">User Addition</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="userForm" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    User Name
                                </label>
                                <input class="form-control" type="text" name="UserName" id="uName" placeholder="User Name" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Password
                                </label>
                                <input class="form-control" type="password" name="Password" id="pass" placeholder="Password" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    First Name
                                </label>
                                <input class="form-control" type="text" name="firstName" id="fName" placeholder="FirstName" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Last Name
                                </label>
                                <input class="form-control" type="text" name="lastName" id="lName" placeholder="LastName" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Email
                                </label>
                                <input class="form-control" type="email" name="Email" id="email" placeholder="Email" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Contact
                                </label>
                                <input class="form-control" type="text" name="contactNumber" id="cNumber" placeholder="Contact" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>
                                    Mobile
                                </label>
                                <input class="form-control" type="number" name="mobileNumber" id="mobNumber" placeholder="Mobile" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Designation</label>
                                <select class="form-control select2 select2-hidden-accessible" name="designation" id="selectDesignation">
                                    <option value="value">text</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label>
                                    Address
                                </label>
                                <input class="form-control" type="text" name="userAddress" id="addr1" placeholder="Address" />
                            </div>
                        </div>


                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button id="btnAddUser" class="btn btn-block btn-primary" type="submit" style="width:auto">Add User</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        getData('User');  


        $('#btnAddUser').off().click(function (event) {
            $("#userForm").off().submit(function (event) {
                event.preventDefault();
                var form = $(this);
                var user = {
                    name: 'User',
                    data: form.serialize()
                }
                addData(user, function (data) {
                    console.log(data);
                });
            });
        });

    });
</script>